@model Tag

<div class="row">

    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Add Tag</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-controller="Tag" asp-action="AddTag" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tag</label>
                        <input type="text" class="form-control" name="Name" id="exampleInputEmail1" placeholder="Enter Tag" asp-for="Name">
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>